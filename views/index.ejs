<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>Blog | <%= title %></title>
	</head>

	<body>
		<h1>Home page</h1>
		<p>Welcome to the home page powered by node js</p>
		<%- include("./partials/nav.ejs")%>
          <div class="blog content">
               <% if(blogs.length> 0){%>
                    <h2>
                         <%=title%>
                    </h2>
                    <%}else{%>
                         <h2>No blogs found</h2>
               <%}%>
               <div class="contents">
                    <%if(blogs.length > 0){%>
                    <% blogs.forEach(({_id, title, content})=>{%>
                              <a href="/blogs/<%=_id%>">
                                   <h3><%=title%></h3>
                                   <p><%=content%></p>
                              </a>
                         <%})%>
                    
                    <%}%>
               </div>
          </div>
	</body>
</html>
